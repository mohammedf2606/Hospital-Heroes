<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reception">

    <ImageView
        android:id="@+id/reception"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/reception"
        tools:layout_editor_absoluteX="-1094dp"
        tools:layout_editor_absoluteY="-30dp"
        android:contentDescription="@string/reception" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <LinearLayout
            android:id="@+id/halo"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@drawable/receptionist_halo"
            android:orientation="horizontal"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/nurse"
            android:src="@drawable/receptionist"
            tools:layout_editor_absoluteX="585dp"
            tools:layout_editor_absoluteY="143dp" />

        <Button
            android:id="@+id/receptionist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>