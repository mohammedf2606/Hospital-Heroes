<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hummer.educationalgame">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Reception"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".MainActivity"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".MainMenu"
            android:noHistory="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterSelection"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".FoodSelection"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".InjectionRoom"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".SittingChair"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".WaitingRoom"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".injectionminigame.InjectionMainActivity"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".PreScan"
            android:noHistory="true"
            android:screenOrientation="landscape"/>
        <activity android:name=".rocketminigame.MainMenu" />
        <activity android:name=".rocketminigame.GameActivity" />

        <service android:name=".MusicService" />
    </application>

</manifest>